@using BookStore.Models
@model Order
@{
    ViewBag.Title = "Confirmation";
}

<main>
    <!-- Hero Area Start-->
    <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Confirmation</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================ confirmation part start =================-->
    <section class="confirmation_part section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="confirmation_tittle">
                        <span style="font-size:50px">Thank you @Session["userName"]. Your order has been received.</span>
                    </div>
                </div>

                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>order info</h4>
                        <ul>
                            <li>
                                <p>order number</p><span>@Model.ID</span>
                            </li>
                            <li>
                                <p>data</p><span>: @Model.Date</span>
                            </li>
                            @*<li>
                                    <p>total</p><span>: @Model.Total Egp</span>
                                </li>*@
                            <li>
                                <p>mayment methord</p><span>: Check payments</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>Shipping Address</h4>
                        <ul>
                            <li>
                                <p>Adress</p><span>: @Model.Adress</span>
                            </li>

                        </ul>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!--================ confirmation part end =================-->
</main>